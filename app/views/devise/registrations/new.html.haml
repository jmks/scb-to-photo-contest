= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
  = devise_error_messages!

  -# Name
  .form-group
    = f.label :first_name, :class => 'control-label col-md-3'
    .col-md-4
      = f.text_field :first_name, :class => 'form-control'

  .form-group
    = f.label :last_name, :class => 'control-label col-md-3'
    .col-md-4
      = f.text_field :last_name, :class => 'form-control'

  -# Email
  .form-group
    = f.label :email, :class => 'control-label col-md-3'
    .col-md-4
      = f.email_field :email, :class => 'form-control'

  .form-group
    = f.label :email_confirmation, :class => 'control-label col-md-3'
    .col-md-4
      = f.email_field :email_confirmation, :class => 'form-control'

  -# Phone - only required to submit photos
  .form-group
    = f.label :phone, :class => 'control-label col-md-3'
    .col-md-4
      = f.text_field :phone, :class => 'form-control'

  -# Password
  .form-group
    = f.label :password, :class => 'control-label col-md-3'
    .col-md-4
      = f.password_field :password, :class => 'form-control'

  .form-group
    = f.label :password_confirmation, :class => 'control-label col-md-3'
    .col-md-4
      = f.password_field :password_confirmation, :class => 'form-control'

  -# Submit/Cancel
  .form-group
    .col-md-offset-3.col-md-1
      = f.submit nil, :class => 'btn btn-primary btn-block', :value => 'Sign up'

= render "devise/shared/links"