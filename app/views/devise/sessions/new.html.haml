#signin-wrapper
  .row
    .col-xs-12.col-sm-offset-1.col-sm-10.col-md-offset-3.col-md-6.col-lg-offset-4.col-lg-4.island
      .two-tone-title.text-center
        %span Sign
        %span In
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
        .form-group
          = label_tag :email, nil, :class => 'control-label col-md-3'
          .col-sm-12.col-md-8
            = email_field_tag :contestant_email, params[:contestant][:email], :class => 'form-control', :name => 'contestant[email]'
        .form-group
          = label_tag 'Password', nil, :class => 'control-label col-md-3'
          .col-sm-12.col-md-8
            = password_field_tag :contestant_password, nil, :class => 'form-control', :name => 'contestant[password]'
        - if devise_mapping.rememberable?
          .form-group
            = label_tag 'Remember Me?', nil, :class => 'control-label col-md-offset-3 col-md-4 checkbox-label text-left'
            .col-sm-12.col-md-3
              = f.check_box :remember_me, :class => 'form-control'
            
        .form-group
          .col-xs-12.col-sm-12.col-md-offset-3.col-md-8
            = submit_tag nil, :class => 'btn btn-flat btn-block btn-lg', :value => 'Sign in'

      .row.devise-links
        .col-xs-12.col-sm-offset-1.col-sm-10.col-md-offset-3.col-md-8
          = render "devise/shared/links"