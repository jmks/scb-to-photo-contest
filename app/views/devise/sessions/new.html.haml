%h1.text-center Sign In

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
  -# Email
  .form-group
    = label_tag :email, nil, :class => 'control-label col-md-3'
    .col-md-4
      = email_field_tag :contestant_email, params[:email], :class => 'form-control', :name => 'contestant[email]'

  -# Password
  .form-group
    = label_tag 'Password', nil, :class => 'control-label col-md-3'
    .col-md-4
      = password_field_tag :contestant_password, nil, :class => 'form-control', :name => 'contestant[password]'

  - if devise_mapping.rememberable?
    .form-group
      = label_tag 'Remember Me?', nil, :class => 'control-label col-md-3'
      .col-md-4
        = f.check_box :remember_me, :class => 'form-control'

  -# Submit/Cancel
  .form-group
    .col-md-offset-3.col-md-1
      = submit_tag nil, :class => 'btn btn-primary btn-block', :value => 'Sign in'

.row
  .col-md-offset-3
    = render "devise/shared/links"