%h1.text-center= @title

#photo-wall.row
  .col-xs-12
    %ul.text-center.list-inline
      - @photos.each do |photo|
        %li.photo= render 'photo_thumb', photo: photo

#pagination.row.text-center
  .col-xs-12
    - if @page > 1
      = link_to page_photos_path(@prev_params), class: 'btn btn-default btn-lg previous', title: 'Previous Page' do
        %i.fa.fa-backward
    = link_to page_photos_path(@next_params), class: 'btn btn-default btn-lg next', title: 'Next Page' do 
      %i.fa.fa-forward
