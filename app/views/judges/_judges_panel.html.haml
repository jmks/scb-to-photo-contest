.container#judges-panel

  - if current_judge.shortlist?
    .row
      .col-xs-12
        %h3= "Judging Shortlist (#{current_judge.first_name})"
    .row
      .col-xs-3.text-center
        %h4
          Flora
          - if @judge.shortlist_done? :flora
            %i.fa.fa-check
        %ul.list-unstyled
          - @judge.flora_shortlist.each do |flo|
            %li= image_tag flo.thumbnail_xs_url

        - if @photo and @photo.flora? and not @judge.shortlist_done? :flora
          = link_to 'Flora Shortlist', judge_shortlist_url(photo_id: @photo.id, category: @photo.category), class: 'btn btn-flat', method: :post

