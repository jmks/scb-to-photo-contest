#order-wrapper.container
  = render './photo_steps_tabbed', step: :order

  .row
    .col-xs-12
      .two-tone-title.text-center
        %span Order
        %span Display Print

  .row.text-left.instructions
    .col-xs-12
      %ul
        %li
          %span Support Conservation Projects -
          %span Prints used for Silent Auction fundraiser
        %li
          %span Win Prizes - 
          %span Display prints required for exhibition and award eligibility
        %li
          %span Discount Printing -
          %span Downtown Camera offering a special price of $3.99/print! Select 3 BUSINESS DAY printing and use our COUPON CODE
        %li
          %span Convenience - 
          %span SCB-TO picks up display prints from Downtown Camera weekly.
        %li
          %span Bulk - 
          %span Add up to 5 entires with SCB-TO then follow the button below to upload images for printing with Downtown Camera
        %li
          %span Verify - 
          %span After ordering click to verify your Downtown Camera order number

  .row
    .col-xs-12.text-center
      /= image_tag asset_path('no-printer-blue.svg'), height: '200px'
      = svg_png_fallback 'no-printer-blue.svg', height: '200px'
  
  .row.codes
    .col-xs-12.text-center
      %table.table
        %thead
          %tr
            %td 
              %strong Photo Size
            %td
              %strong Typical Camera
            %td
              %strong Coupon Code
        %tbody
          %tr
            %td 8x10
            %td point-and-shoot
            %td SCB8x10
          %tr
            %td 8x12
            %td DSLR
            %td SCB8x12

  .row.text-center
    = link_to new_photo_path, class: 'btn btn-flat btn-secondary' do 
      %i.fa.fa-arrow-left.fa-2x
      %span Add Entry
    = link_to 'http://downtowncamera.photofinale.com/prints', target: '_blank', class: 'btn btn-flat' do 
      %i.fa.fa-external-link.fa-2x
      %span Downtown Camera
    = link_to verify_path, class: 'btn btn-flat btn-go' do 
      %span Continue
      %i.fa.fa-arrow-right.fa-2x