#prize-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ type: 'button', 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
          &times;
        .prize-title
      .modal-body

#prizes-wrapper
  .row
    .col-xs-12
      %ul
        %li.prize.tilt-left
          = image_tag asset_path('prizes/olympus.jpg'), alt: 'Prize', height: '250px'
          %p.prize-title.cursive-font Grand Prize
          .prize-detail.hidden
            %p
              %strong Item: 
              Olympus OM-D E-M10 Mirrorless Digital Camera
            %p 
              %strong Awarded to: 
              Best overall photo
            %p 
              %strong Description: 
              This super-slim, light-weight system camera offers best in class performance and is light enough to bring along on your next hike. A 16 MP Micro Four Thirds camera packed with sophisticated technologies including a large electronic viewfinder, high performance 3-axis image stabilisation, high-speed auto-focus, as well as built-in flash and WiFi.
            %p 
              %strong Generously donated by:
            = image_tag asset_path('sponsors/olympus-general.png')

  / .row.category-header
  /   .col-xs-12.text-center
  /     = svg_png_fallback 'flora.svg', height: '60px'
