  / .row.rule
  /   .col-xs-12.col-sm-6
  /     %h3 For best results, save your photographs in Adobe RGB colour space
  /   .col-xs-12.col-sm-6
  /     = image_tag asset_path('no-cmyk.svg'), class: 'img-responsive'

  / .row.rule
  /   .col-xs-12.col-sm-6
  /     %h3 Images MUST be true to life, only corrections to all pixels are acceptable (e.g. contrast, brightness, etc)
  /   .col-xs-12.col-sm-6
  /     = image_tag asset_path('no-shoping3-blue.svg'), class: 'img-responsive'

