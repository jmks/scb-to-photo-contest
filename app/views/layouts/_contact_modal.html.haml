#mail-us-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{type: 'button', class: "close", 'data-dismiss' => "modal", 'aria-hidden' => "true"} &times;
        %h4.modal-title Email Us
      .modal-body
        = form_tag contact_path, class: 'form form-horizontal' do
          .form-group
            .col-xs-12
              = text_area_tag :message, nil, class: 'form-control', rows: 5, placeholder: 'Your message'
          .form-group
            .col-xs-12
              = text_field_tag :email, nil, id: 'mail-email', class: 'form-control', type: 'text', placeholder: 'Your email address'
          .form-group.btns
            .col-xs-12
              %button.btn.btn-default.pull-left{type: 'button', 'data-dismiss' => 'modal'} Cancel
              = submit_tag 'Send', class: 'send-mail btn btn-primary pull-right'