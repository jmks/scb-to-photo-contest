%h1.text-center Sign In

= form_tag signin_path, :class => 'form-horizontal' do
  -# Email
  .form-group
    = label_tag :email, nil, :class => 'control-label col-md-3'
    .col-md-4
      = email_field_tag :email, nil, :class => 'form-control'

  -# Password
  .form-group
    = label_tag 'Password', nil, :class => 'control-label col-md-3'
    .col-md-4
      = password_field_tag :password, nil, :class => 'form-control'

  -# Submit/Cancel
  .form-group
    .col-md-offset-3.col-md-1
      = submit_tag nil, :class => 'btn btn-primary btn-block', :value => 'Sign in'