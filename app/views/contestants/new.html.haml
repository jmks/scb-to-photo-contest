%h1.text-center Sign Up

= form_for @contestant, :url => signup_path, :html => {:class => 'form-horizontal'} do |f|
  -# Name
  .form-group
    = f.label :first_name, :class => 'control-label col-md-3'
    .col-md-4
      = f.text_field :first_name, :class => 'form-control'

  .form-group
    = f.label :last_name, :class => 'control-label col-md-3'
    .col-md-4
      = f.text_field :last_name, :class => 'form-control'

  -# Email
  .form-group
    = f.label :email, :class => 'control-label col-md-3'
    .col-md-4
      = f.email_field :email, :class => 'form-control'

  .form-group
    = f.label :email_confirmation, :class => 'control-label col-md-3'
    .col-md-4
      = f.email_field :email_confirmation, :class => 'form-control'

  -# Password
  .form-group
    = f.label :password, :class => 'control-label col-md-3'
    .col-md-4
      = f.password_field :password, :class => 'form-control'

  .form-group
    = f.label :password_confirmation, :class => 'control-label col-md-3'
    .col-md-4
      = f.password_field :password_confirmation, :class => 'form-control'

  -# Submit/Cancel
  .form-group
    .col-md-offset-3.col-md-1
      = f.submit nil, :class => 'btn btn-primary btn-block', :value => 'Sign up'
