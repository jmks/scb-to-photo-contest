.container
  %h1 Sign Up

  = form_for @contestant, html: {class: "form-horizontal"} do |f|
    .form-group
      = f.label :first_name, class: "col-xs-12 col-md-3 control-label"
      .col-xs-12.col-md-9
        = f.text_field :first_name, class: "form-control"

    .form-group
      = f.label :last_name, class: "col-xs-12 col-md-3 control-label"
      .col-xs-12.col-md-9
        = f.text_field :last_name, class: "form-control"

    .form-group
      = f.label :email, class: "col-xs-12 col-md-3 control-label"
      .col-xs-12.col-md-9
        = f.email_field :email, class: "form-control"

    .form-group
      = f.label :password, class: "col-xs-12 col-md-3 control-label"
      .col-xs-12.col-md-9
        = f.password_field :password, class: "form-control"

    .form-group
      = f.label :password_confirmation, class: "col-xs-12 col-md-3 control-label"
      .col-xs-12.col-md-9
        = f.password_field :password_confirmation, class: "form-control"

    .form-group
      .col-xs-12.col-md-offset-3.col-md-1
        .btn.btn-primary Sign up