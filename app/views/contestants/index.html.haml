    /         - @favourites.each do |entry|
    /           %tr
    /             %td= photo_link entry
    /             %td= entry.title
    /             %td= entry.votes
    /             %td= entry.views
    #photo-wall.row
      %h3.text-center YOU'VE VOTED FOR
      .col-xs-12
        %ul.text-center.list-inline
          - @favourites.each do |photo|
            %li.photo= render 'photos/photo_thumb', photo: photo

  .row
