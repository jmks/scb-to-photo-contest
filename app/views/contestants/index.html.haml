#contestant-activity-wrapper
  .two-tone-title.text-center
    %span Activity Page
    %span= current_contestant.first_name

  #entries-wrapper
    .row.text-center
      %a.btn.btn-flat{ href: workflow_photo_entry_path }
        %i.fa.fa-camera.fa-2x
        Begin Submission
    
    - if @contestant.entries.any?
      %h3.text-center YOUR SUBMISSIONS
          
      .table-responsive
        %table#entry-table.table.table-striped.table-hover
          %thead
            %tr
              %td ENTRY
              %td TITLE
              %td DATE
              %td ACTIONS REQUIRED
              %td STATUS
              %td VOTES
              %td VIEWS
              
          %tbody
            - @contestant.entries.each do |entry|
              %tr
                %td.text-center= photo_link entry
                %td= entry.title
                %td= human_date(entry.created_at)
                %td= next_action entry
                %td= entry.registration_status.to_s.capitalize
                %td= entry.votes
                %td= entry.views
    - else
      %h3 You haven't submitted any photos yet!

